<resources>

    <style name="AppTheme.BlackedOut" parent="Base.AppTheme.BlackedOut">
        <item name="button_accent_selector">@drawable/selector_button_accent_dark</item>
        <item name="android:colorControlHighlight">@color/accent_1_dark</item>
        <item name="toolbar_shadow">@null</item>
    </style>

    <style name="AppTheme.DarkMaterial" parent="Base.AppTheme.DarkMaterial">
        <item name="button_accent_selector">@drawable/selector_button_accent_dark</item>
        <item name="android:colorControlHighlight">@color/accent_1_dark</item>
        <item name="toolbar_shadow">@null</item>
    </style>

    <style name="AppTheme.Dark.Translucent" parent="AppTheme.DarkMaterial">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Light.Cropper" parent="AppTheme.DarkMaterial">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Viewer" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="toolbar_shadow">@null</item>
    </style>

    <style name="Base.AppTheme.BlackedOut" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_1_blacked_out</item>
        <item name="colorPrimaryDark">@color/primary_2_blacked_out</item>
        <item name="colorAccent">@color/accent_1_dark</item>
        <item name="colorAccentDark">@color/accent_2_dark</item>

        <item name="window_background_cards">@color/window_bg_cards_dark</item>
        <item name="android:windowBackground">@color/window_bg_cards_dark</item>
        <item name="colorControlHighlight">@color/accent_1_dark</item>
        <item name="card_background">@color/card_background_blacked_out</item>

        <item name="toolbar_title_color">@color/toolbar_title_color_dark</item>
        <item name="toolbar_icons_color">@color/toolbar_icons_color_dark</item>
        <item name="tab_indicator_color">@color/tab_indicator_color_dark</item>
        <item name="tab_icon_color">@color/tab_icon_color_dark</item>
        <item name="toolbar_shadow">@drawable/toolbar_shadow</item>
        <item name="button_accent_selector">@drawable/selector_button_accent</item>
        <item name="android:textColorPrimary">@color/primary_text_selector_dark</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="toolbarStyle">@style/Widget.Responsive.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">
            @style/Widget.Responsive.Toolbar.Button.Navigation
        </item>
        <item name="actionOverflowButtonStyle">
            @style/Widget.Responsive.ActionButton.Overflow
        </item>
    </style>

    <style name="Base.AppTheme.DarkMaterial" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_1_dark_material</item>
        <item name="colorPrimaryDark">@color/primary_2_dark_material</item>
        <item name="colorAccent">@color/accent_1_dark</item>
        <item name="colorAccentDark">@color/accent_2_dark</item>

        <item name="window_background_cards">@color/window_bg_cards_dark</item>
        <item name="android:windowBackground">@color/window_bg_cards_dark</item>
        <item name="colorControlHighlight">@color/accent_1_dark</item>
        <item name="card_background">@color/card_background_dark_material</item>

        <item name="toolbar_title_color">@color/toolbar_title_color_dark</item>
        <item name="toolbar_icons_color">@color/toolbar_icons_color_dark</item>
        <item name="tab_indicator_color">@color/tab_indicator_color_dark</item>
        <item name="tab_icon_color">@color/tab_icon_color_dark</item>
        <item name="toolbar_shadow">@drawable/toolbar_shadow</item>
        <item name="button_accent_selector">@drawable/selector_button_accent</item>
        <item name="android:textColorPrimary">@color/primary_text_selector_dark</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="toolbarStyle">@style/Widget.Responsive.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">
            @style/Widget.Responsive.Toolbar.Button.Navigation
        </item>
        <item name="actionOverflowButtonStyle">
            @style/Widget.Responsive.ActionButton.Overflow
        </item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/card_sides_margin</item>
        <item name="android:layout_marginRight">@dimen/card_sides_margin</item>
        <item name="android:layout_marginTop">@dimen/card_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_vertical_margin</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">?card_background</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <declare-styleable name="WindowInsetsLayout_Layout">
        <attr name="layout_windowInsets">
            <flag name="top" value="0x1" />
            <flag name="bottom" value="0x2" />
        </attr>
        <attr name="layout_windowInsetsUseMargin" format="boolean" />
    </declare-styleable>
    <declare-styleable name="WindowInsetsLayout">
        <attr name="windowInsets">
            <flag name="top" value="0x1" />
            <flag name="bottom" value="0x2" />
        </attr>
        <attr name="windowInsetsUseMargin" format="boolean" />
    </declare-styleable>

    <style name="Widget.Responsive.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/content_inset</item>
    </style>

    <style name="Widget.Responsive.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Widget.Responsive.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
</resources>