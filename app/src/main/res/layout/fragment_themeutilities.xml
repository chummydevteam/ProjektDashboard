<?xml version="1.0" encoding="utf-8"?>
<com.pluscubed.insetsdispatcher.view.InsetsDispatcherFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                                 android:layout_width="match_parent"
                                                                 android:layout_height="match_parent"
                                                                 android:clipToPadding="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/list_with_fab_bottom_margin"
        app:layout_windowInsets="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/content_inset_less"
            android:weightSum="1">

            <TextView
                android:id="@+id/landingMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_inset_less"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/themeutilities_description"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/landingMessageSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="@dimen/content_inset_less"
                android:layout_weight="0.92"
                android:fontFamily="sans-serif-light"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/themeutilities_description_secondary"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/content_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/content_inset_less"
                android:text="@string/themeutilities_basic_theme_utilities"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic"/>

            <CheckBox
                android:id="@+id/check1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="@string/themeutilities_perform_systemui_restart"/>

            <CheckBox
                android:id="@+id/check2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="@string/themeutilities_perform_soft_reboot"/>

            <CheckBox
                android:id="@+id/check3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:text="@string/themeutilities_perform_complete_system_reboot"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="?attr/card_background"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/themeutilities_perform_action"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/text_ultrasmall"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/content_inset_less"
                android:text="@string/themeutilities_more_theme_utilities"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="?attr/card_background"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/themeutilities_open_layers_manager"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/text_ultrasmall"
                android:textStyle="bold|italic"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="?attr/card_background"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/themeutilities_clear_allthemes"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/text_ultrasmall"
                android:textStyle="bold|italic"/>
        </LinearLayout>

    </ScrollView>

</com.pluscubed.insetsdispatcher.view.InsetsDispatcherFrameLayout>
