<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="80dp"
        android:elevation="5dp"
        android:padding="10dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/instructions_title"
                android:textColor="#313131"
                android:textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#eeeeee"></View>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:elegantTextHeight="false"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:text="1. You should have Akzent Installed and Soft Rebooted before using this color Switcher."
                        android:fontFamily="sans-serif-thin"
                        android:textColor="#313131"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:elegantTextHeight="false"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:text="2. It's Easy AF,Just Slide to the right and Choose your Accent Color"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="#313131"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:elegantTextHeight="false"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:text="3. When Done,you can see the results in the Finalize Section(Optional)"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="#313131"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:elegantTextHeight="false"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:text="4. When Selected,Click on the FAB to Apply the Current Changes."
                        android:fontFamily="sans-serif-thin"
                        android:textColor="#313131"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:elegantTextHeight="false"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:text="5. Woot!!!.The Accent Has been Changed"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="#313131"
                        android:textSize="20dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>